generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(uuid())
  email String @unique
}

model Website {
  id           String         @id @default(uuid())
  url          String
  userId       String
  ticks        Float
  disabled     Boolean        @default(false)
  WebsiteTicks WebsiteTicks[]
}

model Validators {
  id             String         @id
  publicKey      String         @unique
  location       String
  ipAddress      String
  pendingPayouts Int            @default(0)
  WebsiteTicks   WebsiteTicks[]
}

model WebsiteTicks {
  id          String        @id
  websiteId   String
  validatorId String
  status      WebsiteStatus
  latency     Float
  createdAt   DateTime      @default(now())
  Validators  Validators    @relation(fields: [validatorId], references: [id])
  Website     Website       @relation(fields: [websiteId], references: [id])
}

enum WebsiteStatus {
  GOOD
  BAD
}
